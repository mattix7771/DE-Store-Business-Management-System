<Page x:Class="Client.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d"
      Title="Registration">

    <Grid Height="450" Width="800" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label Content="User Registration" Margin="304,46,304,360" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="txt_username" TextWrapping="Wrap" Margin="128,123,472,290"/>
        <TextBox x:Name="txt_password" TextWrapping="Wrap" Margin="128,208,472,205"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="128,92,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="128,177,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold"/>
        <Button Content="Submit" Margin="276,299,400,101" FontSize="16" FontWeight="Bold" Click="btn_regSubmit"/>
        <CheckBox x:Name="check_isAdmin" Content="Admin" HorizontalAlignment="Left" Margin="276,266,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Page>
