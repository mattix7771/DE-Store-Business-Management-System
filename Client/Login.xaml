<Page x:Class="Client.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      Title="Login">

    <Grid Background="White" Height="450" Width="800">
        <Button Content="Button" HorizontalAlignment="Left" Margin="-106,197,0,0" VerticalAlignment="Top"/>
        <Label Content="User Login" Margin="332,46,332,360" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="txt_username" TextWrapping="Wrap" Margin="128,123,472,290"/>
        <TextBox x:Name="txt_password" TextWrapping="Wrap" Margin="128,208,472,205"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="128,92,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="128,177,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold"/>
        <Button Content="Submit" Margin="276,267,400,133" FontSize="16" FontWeight="Bold" Click="btn_loginSubmit"/>
        <Label x:Name="lbl_loginError" Content="" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Width="536" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center"/>

    </Grid>
</Page>
